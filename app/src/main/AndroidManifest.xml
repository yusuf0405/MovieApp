<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mymovieapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_movie_filter_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_movie_filter_24"
        android:supportsRtl="true">
        <activity
            android:name=".app.ui.MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".movie_details_screen.presentation.ui.DetailsMovieActivity"
            android:exported="true"
            android:parentActivityName=".app.ui.MainActivity"
            android:theme="@style/MyTheme" />
    </application>

</manifest>