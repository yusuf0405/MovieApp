<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/movieFragment">

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.example.mymovieapp.movie_screen.presentation.ui.MovieFragment"
        android:label="popular_movie_fragment"
        tools:layout="@layout/movie_fragment" />
    <fragment
        android:id="@+id/personFragment"
        android:name="com.example.mymovieapp.person_screen.presentation.ui.PersonFragment"
        android:label="person_fragment"
        tools:layout="@layout/person_fragment" >
        <action
            android:id="@+id/action_personFragment_to_detailsPersonFragment"
            app:destination="@id/detailsPersonFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsPersonFragment"
        android:name="com.example.mymovieapp.person_details_screen.presentation.ui.DetailsPersonFragment"
        android:label="details_person_fragment"
        tools:layout="@layout/details_person_fragment" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.mymovieapp.favorite_screen.presentation.FavoriteRootFragment"
        android:label="favorite_fragment"
        tools:layout="@layout/favorite_root_fragment" />
    <fragment
        android:id="@+id/favoriteMovieFragment"
        android:name="com.example.mymovieapp.favorite_screen.presentation.ui.FavoriteFragment"
        android:label="favorite_movie_fragment"
        tools:layout="@layout/favorite_movie_fragment" />
    <fragment
        android:id="@+id/favoritePersonFragment"
        android:name="com.example.mymovieapp.favorite_screen.presentation.ui.FavoritePersonFragment"
        android:label="favorite_person_fragment"
        tools:layout="@layout/favorite_person_fragment" />
</navigation>